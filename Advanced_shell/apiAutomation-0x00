#!/bin/bash

# Script: apiAutomation-0x00
# Purpose: Retrieve data for Pikachu from the Pokémon API
# Output: Save response to data.json, log errors to errors.txt

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" > status_code.txt

# Read the HTTP status code
STATUS_CODE=$(cat status_code.txt)
rm status_code.txt

# Check if request succeeded (HTTP 200)
if [ "$STATUS_CODE" -eq 200 ]; then
    echo "✅ Successfully retrieved Pikachu data. Saved to $OUTPUT_FILE."
else
    echo "❌ Request failed with status code $STATUS_CODE" >> "$ERROR_FILE"
    echo "Check $ERROR_FILE for details."
    # Optionally remove incomplete data.json
    rm -f "$OUTPUT_FILE"
fi 
